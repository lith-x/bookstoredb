{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "transpile:scraper",
            "type": "typescript",
            "tsconfig": "tsconfig.scraper.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "site:watch",
            "dependsOn": [
                "site:watch - webpack",
                "site:watch - scss"
            ]
        },
        {
            "label": "site:watch - webpack",
            "type": "shell",
            "command": "yarn",
            "args": [
                "run",
                "build:dev"
            ],
            "problemMatcher": [
                "$ts-webpack-watch"
            ]
        },
        {
            "label": "site:watch - scss",
            "type": "shell",
            "command": "sass",
            "args": [
                "--watch",
                "${workspaceFolder}/dist/style.scss",
                "${workspaceFolder}/dist/style.css"
            ],
            "problemMatcher": [
                "$node-sass"
            ]
        }
    ]
}