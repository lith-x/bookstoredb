    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build + Run scraper",
            "program": "${workspaceFolder}\\scraper\\main.js",
            "preLaunchTask": "transpile:scraper",
            "outFiles": [
                "${workspaceFolder}/scraper/**/*.js"
            ],
            "console": "integratedTerminal"

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run scraper",
            "program": "${workspaceFolder}\\scraper\\main.js",
            "outFiles": [
                "${workspaceFolder}/scraper/**/*.js"
            ],
            "console": "integratedTerminal"

        }
    ]
}